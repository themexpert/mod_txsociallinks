<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_txsociallinks</name>
	<author>Abu Huraira Bin Aman</author>
	<creationDate>Oct 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>shams.bd71@gmail.com</authorEmail>
	<authorUrl>www.themexpert.com</authorUrl>
	<version>1.0.0</version>
	<description>MOD_TXSOCIALLINKS_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_txsociallinks">mod_txsociallinks.php</filename>
		<folder>fields</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>

	<media folder="media" destination="mod_txsociallinks">
		<folder>fontawesome</folder>
		<folder>css</folder>
		<folder>js</folder>
	</media>
	
	<languages folder="language">
		<language tag="en-GB">en-GB.mod_txsociallinks.ini</language>
		<language tag="en-GB">en-GB.mod_txsociallinks.sys.ini</language>
	</languages>

	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_SEARCH" />

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="modules/mod_txsociallinks/fields">
				<field name="text"
					label="Label Msg"
					size="30"
					type="text"
				/>

				<field
					name="show_label"
					type="radio"
					default="1"
					label="Show label"
					class="btn-group"
					description="">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field name="list_labels"
					type="Repeatable"
					icon="list"
					description="Please select label n ion properly to get beautyful results"
					label="Select icon n labels to show"
					default="">
					<fieldset hidden="true" name="list_templates_modal" repeat="true">
						<field
							name="icon"
							type="faselector"
							label="Select Icon"
							description="Select font awosome icon" />

						<field name="label"
							label="Text"
							size="30"
							type="text" />

						<field name="link"
							label="Link"
							size="30"
							type="text" />

					</fieldset>
				</field>

			</fieldset>
			<fieldset name="assets">
				<field name="load_font_awosome" type="radio" default="0" label="LOAD_FONT_AWOSOME_LABEL"
					description="LOAD_FONT_AWOSOME_DESC" class="btn-group">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
